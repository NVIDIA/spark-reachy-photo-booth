{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build app",
      "type": "shell",
      "command": "uv run ruff format . && uv run ruff check . && uv run pyright",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$python"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "run app",
      "type": "shell",
      "command": "docker compose up --build --watch --no-attach redpanda --no-attach redpanda-console --no-attach lgtm-otel",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "line": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*docker compose up.*$",
          "endsPattern": "^.*started.*$"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
